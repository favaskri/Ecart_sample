<section>
    <div class="container mt-5">
        <form action="/user/place-order" id="checkout-form">
            <div class="row">
                <div class="col-md-6">
                    <h2>Enter the delivery details</h2>
                    <div>
                        <label for="">Address</label>
                        <input class="form-control" type="text" id="address" name="address">
                        <label for="">Pincode</label>
                        <input class="form-control" type="text" id="pincode" name="pincode">
                        <label for="">Mobile Number</label>
                        <input class="form-control" type="text" id="mobile" name="mobile">
                    </div>

                </div>
                <div class="col-md-4" >
                    
                    <div class="container mt-5 ml-5 checkout  ">
                        <h5>Total amount:Rs.{{total}}</h5>
                        <hr>
                        <div class="payment">
                            <p>Payment Method</p>
                            <label class="radio-inline">
                                <input type="radio" name="Payment Methode" value="COD" checked>COD
                            </label>
                            <label>
                                <label class="radio-inline"></label>
                                <input type="radio" name="Payment Methode" value="Online" checked>Online Payment
                            </label>
                            <button type="submit" class="btn btn-primary float-right">Checkout</button>

                        </div>

                    </div>

                </div>







            </div>


        </form>



    </div>
</section>