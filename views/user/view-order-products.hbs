<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            
            <div class="col-md-3 p-3">
                <div class="card" style="width: 16rem; heigh: 28rem" >
                    <img  class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="Card image cap" 
                    style="height:12rem">
                    <div class="card-body">
                        <h5 class="Card title">{{this.product.product_name}}</h5>
                        <p class="card-text">Rs.{{this.product_price}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>
                        <p class="card-text">{{this.product.product_weight}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>