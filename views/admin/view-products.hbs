<section>
  <div class="raw mt-4">
    <a href="admin/add-products" class="btn btn-success ml-5"> Add Product</a>

  </div>
  <div class="container">

    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col"></th>
          </th>
          <th scope="col">Tittle</th>
          <th scope="col">Catogory</th>
          <th scope="col">Discription</th>
          <th scope="col">Price</th>
          <th>Image</th>
          <th scope="col">Options1</th>
          <th scope="col">Options2</th>


        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.product_name}}</td>
          <td>{{this.product_name_fr}}</td>
          <td>{{this.product_weight}}</td>
          <td>{{this.product_price}}</td>
          <td><img style="width: 50px; height: 50px  " src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
          <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to deleat {{this.product_name}}?')">Delete</a></td>


        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>

